package homework;

import java.util.Scanner;

public class Polynomial {

	public static void main(String[] args) {

		// 사용자로부터 입력을 받기위해 Scanner객체 생성
		Scanner input = new Scanner(System.in);

		// 변수 선언
		int number;
		int result;

		// 사용자로부터 입력받기 위한 출력문
		System.out.print("X의 값을 정수로 입력하세요. : ");
		number = input.nextInt();

		// 다항식 계산
		//result = 3 * (number * number * number) + 7 * (number * number) + 11 * (number) + 6;

		result = 3 * (int)Math.pow(number, 3) + 7 * (int)Math.pow(number, 2) + 11 * (number) + 6;
		
		// 결과 값을 출력한다.
		System.out.println(result);
	}

}
