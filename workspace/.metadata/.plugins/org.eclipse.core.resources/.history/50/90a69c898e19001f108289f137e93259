package pdf0524;

import java.util.Scanner;

public class RainFall {

	public static void main(String[] args) {

//		1. 사용자로부터 입력받기 위한 스캐너 객체 생성
//		2. 변수 선언
//		2.1 필요 변수(년, 분기, 합)
//		3. 배열 선언
//		4. 배열에 맞게 강수량 입력
//		5. 년도별 강수량 출력
//		5.1. 반복문 안에서 변수 선언해서 여러번 초기화할 필요업게 함.
//		

//		1. 사용자로부터 입력받기 위한 스캐너 객체 생성
		Scanner scanner = new Scanner(System.in);
//		2. 변수 선언
//		2.1 필요 변수(년, 분기)
		int years;
		final int QUARTERS = 4;

		years = 3;

//		3. 배열 선언
		double[][] rain = new double[years][QUARTERS];
//		4. 배열에 맞게 강수량 입력
		System.out.println("3년간 연도별 강수랑 출력 프로그램");
		
		for (int j = 0; j < years; j++) {
			System.out.print((j+1) + "년차");
			for (int i = 0; i < rain.length; i++) {
				System.out.print((i + 1) + "분기별 강수량을 입력하세요. : ");
				do {
					double inputValue;

					inputValue = scanner.nextDouble();
					// 탈출조건
					if (inputValue > 0.0) {
						rain[j][i] = inputValue;
						break;
					} else {
						System.out.print((i + 1) + "분기가 잘 못 입력되었습니다. 다시 입력하세요. : ");
					}

				} while (true);

				System.out.println(rain[i]);
			}
		}

//		5. 년도별 강수량 출력

//		5.1. 반복문 안에서 변수 선언해서 여러번 초기화할 필요업게 함.

	}

}
