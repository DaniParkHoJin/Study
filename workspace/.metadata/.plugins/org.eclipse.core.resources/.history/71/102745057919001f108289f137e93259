package ch05.sec07;


public class MultidimeansionalArrayBynewExample {

	public static void main(String[] args) {
		// 각 반의 학생 수가 3명으로 동일할 경우 점수 저장을 위한 2차월 배열 생성
		int[][] mathScroes = new int[2][3];
		// 배열 항목 초기값 출력

		for (int i = 0; i < mathScroes.length; i++) { 			// 반의 수만큼 반복
			for (int k = 0; k < mathScroes[i].length; k++) {	// 해당 반의 학생 수만큼 반복
				System.out.println("mathScores[" + i + "]["+ k+"]: " + mathScroes[i][k]);
			};
		}
		System.out.println();
		
		// 배열 항목 값 변경
		mathScroes[0][0]= 80;
		mathScroes[0][1]= 83;
		mathScroes[0][2]= 85;
		mathScroes[1][0]= 86;
		mathScroes[1][1]= 90;
		mathScroes[1][2]= 92;
		
		// 전체 학생의 수학 평균 구하기
		int totalStudent = 0;
		int totalMathSum = 0;
		
		for (int i = 0; i < mathScroes.length; i++) { 		// 반의 수만큼 반복
			totalStudent
		}
	}

}
